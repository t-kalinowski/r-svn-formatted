#
# ${RHOME}/afm/Makefile

VPATH = @srcdir@
srcdir = @srcdir@
top_srcdir = @top_srcdir@

top_builddir = ..
subdir = afm

include $(top_builddir)/Makeconf

# Everything except CVS and Makefile
INSTALLFILES = `ls $(srcdir)/*.afm $(srcdir)/*.lt1`

all: Makefile R

Makefile: $(srcdir)/Makefile.in $(top_builddir)/config.status
	cd $(top_builddir) && \
	  CONFIG_FILES=$(subdir)/$@ CONFIG_HEADERS= \
	  $(SHELL) ./config.status

R:
	@if [ "$(srcdir)" != "." ]; then \
	  $(MAKE) rhome=$(top_builddir) install; \
	fi

install: installdirs
	@echo "Installing afm ..."
	@for f in $(INSTALLFILES); \
	  do $(INSTALL_DATA) $$f $(rhome)/afm; \
	done
installdirs:
	@$(MKINSTALLDIRS) $(rhome)/afm
install-strip: install
uninstall:
	@echo "Uninstalling afm ..."
	@rm -rf $(rhome)/afm

mostlyclean:
clean:
	@if [ "$(srcdir)" != "." ]; then \
	  rm -f *.afm *.lt1; \
	fi
distclean:
	@rm -f Makefile
maintainer-clean: distclean
