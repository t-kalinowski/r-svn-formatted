dnl CheckForMakeIncludeSyntax()
dnl {
dnl   cat >.Makefile <<EOF
dnl ${1}
dnl all:
dnl EOF
dnl     (eval "set -x; ${MAKE} -f .Makefile") >&5 2>&1
dnl }
dnl if test -z "${MAKE_INCLUDE_DEPS}"; then
dnl   AC_MSG_CHECKING(whether ${MAKE} supports conditional inclusion)
dnl   rm -f .Makefile .dummy
dnl   if CheckForMakeIncludeSyntax "-include .dummy"; then
dnl     AC_MSG_RESULT(yes)
dnl     MAKE_INCLUDE_DEPS="-include"
dnl   elif CheckForMakeIncludeSyntax "sinclude .dummy"; then
dnl     AC_MSG_RESULT(yes)
dnl     MAKE_INCLUDE_DEPS="sinclude"
dnl   else
dnl     AC_MSG_RESULT(no)
dnl     MAKE_INCLUDE_DEPS="#include"
dnl   fi
dnl   rm -f .Makefile
dnl fi
dnl AC_SUBST(MAKE_INCLUDE_DEPS)
    
