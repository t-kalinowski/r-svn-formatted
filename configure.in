AC_MSG_CHECKING([whether ${CC} accepts -M for generating dependencies])
depend_rules_frag=Makefrag.dep
echo "#include <math.h>" > conftest.${ac_ext}
if test -n "`${CC} -M conftest.${ac_ext} | grep conftest`"; then
  AC_MSG_RESULT(yes)
