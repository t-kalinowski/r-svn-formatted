#
# ${RHOME}/doc/Makefile

VPATH = @srcdir@
srcdir = @srcdir@
top_srcdir = @top_srcdir@

top_builddir = ..

include $(top_builddir)/Makeconf

all R docs:
	@$(MKINSTALLDIRS) $(top_builddir)/doc/html/search
	@if [ "$(srcdir)" != "." ]; then \
	  for f in $(srcdir)/html/*.html $(srcdir)/html/*.jpg; do \
	    $(INSTALL_DATA) $$f $(top_builddir)/doc/html; \
	  done; \
	  for f in $(srcdir)/html/search/*.class \
	    $(srcdir)/html/search/*.html \
	    $(srcdir)/html/search/index.txt ; do \
	    $(INSTALL_DATA) $$f $(top_builddir)/doc/html/search; \
	  done; \
	fi

install: installdirs installhtml
	$(INSTALL) keyword-test $(rhome)/doc
	$(INSTALL_DATA) $(srcdir)/KEYWORDS $(rhome)/doc
#	cd manual; $(MAKE) install

installdirs:
	@$(MKINSTALLDIRS) $(rhome)/doc/manual
	@$(MKINSTALLDIRS) $(rhome)/doc/html/search

installhtml:
	@for f in $(srcdir)/html/*.html $(srcdir)/html/*.jpg; do \
	  $(INSTALL_DATA) $$f $(rhome)/doc/html; \
	done
	@for f in $(srcdir)/html/search/*.class \
	          $(srcdir)/html/search/*.html \
	          $(srcdir)/html/search/index.txt ; do \
	  $(INSTALL_DATA) $$f $(rhome)/doc/html/search; \
	done

mostlyclean:
clean:
	@if [ "$(srcdir)" != "." ]; then \
	  rm -rf html; \
	fi
	@cd manual; $(MAKE) $@

distclean:
	@rm -f Makefile keyword-test

maintainer-clean: distclean



