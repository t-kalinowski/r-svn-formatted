else
	@TEXINPUTS="../../share/texmf;$$TEXINPUTS" \
	  $(PDFLATEX) -interaction=nonstopmode fullrefman.tex 
	@$(MAKEINDEX) fullrefman
	@TEXINPUTS="../../share/texmf;$$TEXINPUTS" \
	  $(PDFLATEX) -interaction=nonstopmode fullrefman.tex 
	@TEXINPUTS="../../share/texmf;$$TEXINPUTS" \
	  $(PDFLATEX) -interaction=nonstopmode fullrefman.tex 
