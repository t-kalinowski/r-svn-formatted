#!/bin/sh
#
# ${RHOME}/etc/COMPILE

# @configure_input@

MAKE=${MAKE-@MAKE@}
MAKEOPTS=

for i in $*; do
  case ${i} in
    *.[cfr])
      obj=`echo $i|sed 's/\.[^\.][^\.]*$/.o/'`
      ${MAKE} -f ${RHOME}/etc/Makeconf ${MAKEOPTS} ${obj}
      ;;
    -D*|*=*)
      MAKEOPTS="${MAKEOPTS} ${i}"
      ;;
    *)
      echo "ERROR:  don't know how to compile ${i}"
      exit 1
      ;;
  esac
done

