CC="@CC@"
CFLAGS="@CFLAGS@ @PICFLAGS@ -I${RHOME}/include"
FC="@FC@"
FFLAGS="@FFLAGS@ @PICFLAGS@"

for i in $*
do
	case $i in

	*.f)	echo $FC $FFLAGS -c $i
		$FC $FFLAGS -c $i
		;;

	*.c)	echo $CC $CFLAGS -c $i
		$CC $CFLAGS -c $i
		;;

	*)	echo "error: don't know how to compile $i"
		exit 1
		;;

	esac
done
