# @configure_input@
#
# ${R_HOME}/etc/Makeconf

CC = @CC@
CFLAGS = @CFLAGS@
CPICFLAGS = @CPICFLAGS@
CPPFLAGS = @CPPFLAGS@
DEFS = @DEFS@
FC = @FC@
FFLAGS = @FFLAGS@
FLIBS = @FLIBS@
FPICFLAGS = @FPICFLAGS@
F2C = @F2C@
F2CFLAGS = @F2CFLAGS@
SHLIBEXT = @SHLIBEXT@
SHLIBLD = @SHLIBLD@
SHLIBLDFLAGS = @SHLIBLDFLAGS@

R_XTRA_CFLAGS = @R_XTRA_CFLAGS@
R_XTRA_CPPFLAGS = -I$(R_HOME)/include
R_XTRA_FFLAGS = @R_XTRA_FFLAGS@

ALL_CPPFLAGS = $(R_XTRA_CPPFLAGS) $(CPPFLAGS) $(DEFS)
ALL_CFLAGS = $(R_XTRA_CFLAGS) $(CPICFLAGS) $(CFLAGS)
ALL_FFLAGS = $(R_XTRA_FFLAGS) $(FPICFLAGS) $(FFLAGS)

.SUFFIXES:
.SUFFIXES: .c .f .o

.c.o:
	$(CC) $(ALL_CPPFLAGS) $(ALL_CFLAGS) -c $< -o $@
@f77_rules_frag@

$(SHLIB): $(OBJS)
	$(SHLIBLD) $(SHLIBLDFLAGS) -o $@ $(OBJS) $(FLIBS)
