#
# ${RHOME}/etc/Makefile

VPATH = @srcdir@
srcdir = @srcdir@
top_srcdir = @top_srcdir@

top_builddir = ..

include $(top_builddir)/Makeconf

MANdest= ../doc/manual

DVI = $(MANdest)/Man.dvi

all: R

R:
	@if [ "$(srcdir)" != "." ]; then \
	  for f in buildlib.pl html-layout.pl Rdconvlib.pl; do \
	    $(INSTALL_DATA) $(srcdir)/$$f .; \
	  done; \
	fi

$(DVI): stamp-latex
	-(cd $(MANdest); $(MAKE) Man.dvi)

mostlyclean: clean
clean:
	@if [ "$(srcdir)" != "." ]; then \
	  rm -f buildlib.pl html-layout.pl Rdconvlib.pl; \
	fi
	-(cd $(MANdest); $(MAKE) $@)
distclean: clean
	@rm -f Makefile
maintainer-clean: distclean

install: installdirs
	@for f in buildlib.pl html-layout.pl Makeconf Rdconvlib.pl; do \
	  $(INSTALL_DATA) $$f $(rhome)/etc; \
	done

installdirs:
	@$(MKINSTALLDIRS) $(rhome)/etc
