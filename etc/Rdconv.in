use Getopt::Long;

$RHOME=$ENV{"RHOME"} or die("Environment variable RHOME not found\n");

require "$RHOME/etc/Rdconvlib.pl";

@knownoptions = ("debug|d", "type|t:s", "help|h");
GetOptions (@knownoptions) || usage();

usage() if $opt_help;

if($opt_type =~ /html/i){
    tie %htmlindex, DB_File, "$RHOME/library/htmlindex";
    open(htmlout, "|-");
}

Rdconv($ARGV[0],$opt_type,$opt_debug);


