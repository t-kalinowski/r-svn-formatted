#!/bin/sh
#
# ${RHOME}/etc/SHLIB

OBJS=

if [ ${1} = "-o" ]; then
  lib=${2}; shift 2
else
  lib=${1%.*}.@SHLIBEXT@
fi

for i in ${*}; do
  obj=${i%.*}.o
  make -f ${RHOME}/etc/Makeconf ${obj}
  OBJS="${OBJS} ${obj}"
done

@SHLIBLD@ @SHLIBLDFLAGS@ -o ${lib} ${OBJS}    

