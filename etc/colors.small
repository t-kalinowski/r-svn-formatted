###--- -*- R -*-

.Colors <- list(
	red =		c(255,   0,   0),
	green =		c(  0, 255,   0),
	blue =		c(  0,   0, 255),
	cyan =		c(  0, 255, 255),
	magenta = 	c(255,   0, 255),
	yellow =	c(255, 255,   0),
	white =		c(255, 255, 255),
	black =		c(  0,   0,   0),
)

.Colors <- "names<-"(
	unlist(
		lapply(.Colors, function(x) rgb(x[1]/255,x[2]/255,x[3]/255))
	), names(.Colors))
