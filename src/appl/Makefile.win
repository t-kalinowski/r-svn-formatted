#-*- Makefile -*-
include ../gnuwin32/MkRules

CFLAGS=$(OPTFLAGS) -I../include -DHAVE_CONFIG_H
FFLAGS=$(OPTFLAGS)
CSOURCES=$(wildcard *.c)
FSOURCES=$(wildcard *.f)
OBJS=$(foreach i, $(CSOURCES) $(FSOURCES), $(basename $i).o)

all: makeMakedeps ../gnuwin32/libappl.a

../gnuwin32/libappl.a: $(OBJS)

# Dependencies
DEPS=$(foreach i, $(CSOURCES), $(basename $i).d)

.c.d:
	@echo "making $@ from $<"
	@$(CC)  -M $(CFLAGS) $($*-CFLAGS) $< -o $@

makeMakedeps: $(DEPS)
	@$(RM) Makedeps
	@cat $(DEPS) >> Makedeps

-include Makedeps
