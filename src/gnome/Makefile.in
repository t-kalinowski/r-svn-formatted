#
# ${RHOME}/src/unix/Makefile

VPATH = @srcdir@
srcdir = @srcdir@
top_srcdir = @top_srcdir@

top_builddir = ../..
subdir = src/unix

include $(top_builddir)/Makeconf

distdir = $(top_builddir)/$(PACKAGE)-$(VERSION)/$(subdir)
DISTFILES = $(shell cd $(srcdir) && ls PSPAPER Makefile.in *.[cfh])

GNOME_CFLAGS = -I/home/lyndon/include -DNEED_GNOMESUPPORT_H -I/home/lyndon/lib/gnome-libs/include -I/home/lyndon//include -I/usr/X11R6/include -I/home/lyndon/lib/glib/include

OBJS = \
	dataentry.o \
	devPS.o \
	devPicTeX.o \
	dynload.o \
	edit.o \
	system.o \
	Rsock.o \
	sock.o

GNOME_OBJS = \
	devGNOME.o \
	gtkconsole.o \
	terminal.o \
	terminal-functions.o \
	terminal-menu.o \
	terminal-toolbar.o

LIB = libRgnome.a

all: R

R: $(LIB)

$(LIB): $(OBJS) $(GNOME_OBJS)
	$(AR) cr $(LIB) $(OBJS) $(GNOME_OBJS)
	$(RANLIB) $(LIB)

dataentry.o: $(srcdir)/dataentry.c $(srcdir)/dataentry.h $(top_srcdir)/src/include/Defn.h
	$(CC) $(CFLAGS) $(X_CFLAGS) $(CPPFLAGS) -c $<
devPS.o: $(srcdir)/devPS.c $(top_srcdir)/src/include/Graphics.h $(top_srcdir)/src/include/Defn.h
devPicTeX.o: $(srcdir)/devPicTeX.c $(top_srcdir)/src/include/Graphics.h $(top_srcdir)/src/include/Defn.h

dynload.o: $(srcdir)/dynload.c ../include/FFTab.h ../include/FFDecl.h
system.o: $(srcdir)/system.c $(top_srcdir)/src/include/Defn.h ../include/Platform.h
	$(CC) $(CFLAGS) $(GNOME_CFLAGS) -c $<

devGNOME.o: $(srcdir)/devGNOME.c $(srcdir)/devGNOME.h
	$(CC) $(CFLAGS) $(GNOME_CFLAGS) -c $<
gtkconsole.o: $(srcdir)/devGNOME.c $(srcdir)/gtkconsole.h
	$(CC) $(CFLAGS) $(GNOME_CFLAGS) -c $<
terminal.o: $(srcdir)/terminal.c $(srcdir)/terminal.h $(srcdir)/terminal-functions.ht $(srcdir)/terminal-menu.h $(srcdir)/terminal-toolbar.h
	$(CC) $(CFLAGS) $(GNOME_CFLAGS) -c $<
terminal-functions.o: $(srcdir)/terminal-functions.c $(srcdir)/terminal.h $(srcdir)/terminal-functions.ht $(srcdir)/terminal-menu.h $(srcdir)/terminal-toolbar.h
	$(CC) $(CFLAGS) $(GNOME_CFLAGS) -c $<
terminal-menu.o: $(srcdir)/terminal-menu.c $(srcdir)/terminal.h $(srcdir)/terminal-functions.ht $(srcdir)/terminal-menu.h $(srcdir)/terminal-toolbar.h
	$(CC) $(CFLAGS) $(GNOME_CFLAGS) -c $<
terminal-toolbar.o: $(srcdir)/terminal-toolbar.c $(srcdir)/terminal.h $(srcdir)/terminal-functions.ht $(srcdir)/terminal-menu.h $(srcdir)/terminal-toolbar.h
	$(CC) $(CFLAGS) $(GNOME_CFLAGS) -c $<

../include/FFTab.h ../include/FFDecl.h::
	(cd ../include; $(MAKE) $(@F))

mostlyclean: clean
clean:
	@echo Cleaning in src/unix
	@-rm -f *.o *.a
distclean: clean
	@-rm -f Makefile
maintainer-clean: distclean

distdir: $(DISTFILES)
	@for f in $(DISTFILES); do \
	  test -f $(distdir)/$${f} \
	    || ln $(srcdir)/$${f} $(distdir)/$${f} 2>/dev/null \
	    || cp -p $(srcdir)/$${f} $(distdir)/$${f}; \
	done
