# to be run from RHOME/src/library/$(PKG)/check
include ../../../gnuwin32/MkRules

run: $(PKG)-Ex.R
	@$(ECHO) "Running examples in '$(PKG)-Ex.R' ..."
	../../../../bin/rterm --vsize 6M < $(PKG)-Ex.R > $(PKG)-Ex.Rout


$(PKG)-Ex.R: ../../../../library/$(PKG)/R-ex/*.R
	@$(ECHO) "Massaging examples into '$(PKG)-Ex.R' ..."
	@$(SED) s/@PKG@/$(PKG)/ ../../../gnuwin32/check/makeRex.R > MakeRex.R
	@../../../../bin/rterm  --quiet --no-save < makeRex.R > nul
	@$(RM) makeRex.R
