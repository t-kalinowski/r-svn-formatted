# ${R_HOME}/etc/Makeconf

# Hand-edited version for gnuwin32.
# Most of those commented out are set in MkRules

RHOME=$(R_HOME) # for use in TCL_HOME
ifdef DEBUG
  DLLFLAGS=
  DEBUGFLAG=$(G_FLAG)
else
  DLLFLAGS=-s
  DEBUGFLAG=
endif
include $(R_HOME)/src/gnuwin32/MkRules

# AR = ar
BLAS_LIBS = -L"$(R_HOME)/$(IMPDIR)" -lRblas
C_VISIBILITY = 
# CC = gcc
CFLAGS = $(PKG_CFLAGS) -O3 -Wall $(DEBUGFLAG)
CPICFLAGS = 
CPPFLAGS = $(PKG_CPPFLAGS) -I$(R_HOME)/include $(CLINK_CPPFLAGS)
# CXX = g++
CXXCPP = $(CXX) -E
CXXFLAGS = $(PKG_CXXFLAGS) -O2 -Wall $(DEBUGFLAG)
CXXPICFLAGS = 
DYLIB_EXT = .dll
DYLIB_LD = $(DLL)
DYLIB_LDFLAGS = -shared
DYLIB_LINK = $(DYLIB_LD) $(DYLIB_LDFLAGS) $(LDFLAGS)
ECHO = echo
ECHO_C = 
ECHO_N = -n
ECHO_T = 
# F77 =
F77_VISIBILITY = 
# FC =
# FCFLAGS = -O3
FFLAGS = $(PKG_FFLAGS) -O3 $(DEBUGFLAG)
# FLIBS =
FCPICFLAGS =
FPICFLAGS = 
FOUNDATION_CPPFLAGS =
FOUNDATION_LIBS =
GRAPHAPP_LIB=-lgraphapp
JAR =
JAVA = 
JAVAC = 
JAVA_HOME = 
JAVA_LD_LIBRARY_PATH = 
JAVA_LIBS = -L"$(JAVA_HOME)/bin/client" -ljvm
JAVA_CPPFLAGS = -I"$(JAVA_HOME)/../include" -I"$(JAVA_HOME)/../include/win32"
LAPACK_LIBS = -L"$(R_HOME)/$(IMPDIR)" -lRlapack
## we only need this is if it is external, as otherwise link to R
LIBINTL=
LIBM = -lm
LIBR = -L"$(R_HOME)/$(IMPDIR)" -lR
LIBS =  -lm
## needed by R CMD config
LIBnn = lib
