"image" <-      
function (x=seq(0,1,len=nrow(z)), y=seq(0,1,len=ncol(z)), z,
	zlim=range(z, na.rm=TRUE), col=heat.colors(12), ...)
{
	plot(0, 0, xlim=range(x,na.rm=TRUE), ylim=range(y,na.rm=TRUE),
		type="n", xaxs = "i", yaxs = "i", xlab="", ylab="", ...)
	.Internal(image(
			as.double(x),
			as.double(y),
			as.double(z),
			as.double(zlim),
			col))
}
