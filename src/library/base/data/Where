#!/bin/sh
pwd=`pwd`
RHOME=../../../..
cd $RHOME
RHOME=`pwd`
(
 echo 'This file has been produced by '$0' -- do not edit!'; echo
 echo "RHOME=$RHOME"
 date
 echo '---------------------------------'
 echo ''
 (cd $RHOME/src/library
  grep 'data([^)]' */man/*.Rd | sed '/data.Rd/d; /\\code{data/d; s/"//g; s/\(.*\):\(.*\)/\2 -- \1/; s#base/man/##; s#\([A-z]*\)/man/\(.*\)#\2 __\1__ #'
  cd $RHOME
  grep 'data([^)]' demos/*/*.R | sed 's/"//g; s/\(.*\):\(.*\)/\2 -- \1/'
 ) | sort
) > $pwd/Where-used
