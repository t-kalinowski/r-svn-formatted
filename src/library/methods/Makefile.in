#
# ${R_HOME}/src/library/methods/Makefile

VPATH = @srcdir@
srcdir = @srcdir@
top_srcdir = @top_srcdir@

top_builddir = ../../..
subdir = src/library/methods

include $(top_builddir)/Makeconf
## the following is written to be called from the src/library directory
## BUT -- all these relative path settings should really be replaced with
## absolute settings, using pwd and/or R_HOME
R_INSTALL = ../../bin/R INSTALL -c -l ../../library

distdir = $(top_builddir)/$(PACKAGE)-$(VERSION)/$(subdir)
DISTFILES = INDEX TITLE DESCRIPTION.in Makefile.in

pkg = methods

all: Makefile
	@echo "building package \`$(pkg)'"
	@cd ..; $(R_INSTALL) $(pkg) && echo "package \`$(pkg)' installed"

Makefile: $(srcdir)/Makefile.in $(top_builddir)/config.status
	@cd $(top_builddir) && \
	  CONFIG_FILES=$(subdir)/$@ CONFIG_HEADERS= \
	  $(SHELL) ./config.status

mostlyclean: clean
clean:
	@if test -d src; then (cd src && $(MAKE) $@); fi
distclean:
	@if test -d src; then (cd src && $(MAKE) $@); fi
	@rm -f Makefile DESCRIPTION
maintainer-clean: distclean

distdir: $(DISTFILES)
	@for f in $(DISTFILES); do \
	  test -f $(distdir)/$${f} \
	    || ln $(srcdir)/$${f} $(distdir)/$${f} 2>/dev/null \
	    || cp -p $(srcdir)/$${f} $(distdir)/$${f}; \
	done
	@for d in R data exec man src; do \
	  if test -d $(srcdir)/$${d}; then \
	    ((cd $(srcdir); \
	          $(TAR) -c -f - $(DISTDIR_TAR_EXCLUDE) $${d}) \
	        | (cd $(distdir); $(TAR) -x -f -)) \
	      || exit 1; \
	  fi; \
	done
