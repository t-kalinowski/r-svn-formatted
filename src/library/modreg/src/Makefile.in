#
# ${R_HOME}/src/library/modreg/src/Makefile

pkg = modreg

VPATH = @srcdir@
srcdir = @srcdir@
top_srcdir = @top_srcdir@

top_builddir = ../../../..
subdir = src/library/$(pkg)/src
R_HOME = $(top_builddir)

OBJS = bsplvd.o bvalue.o bvalus.o ksmooth.o loessc.o loessf.o \
	ppr.o qsbart.o sbart.o sgram.o sinerp.o sslvrg.o stxwx.o
SHLIB = $(pkg).@SHLIB_EXT@
SHLIB_LIBADD = $(FLIBS)
PKG_LIBS = $(BLAS_LIBS)

all: Makefile $(SHLIB)
	@$(top_srcdir)/tools/mkinstalldirs \
	  $(top_builddir)/library/$(pkg)/libs
	@$(top_srcdir)/tools/copy-if-change $(SHLIB) \
	  $(top_builddir)/library/$(pkg)/libs/$(SHLIB)

Makefile: $(srcdir)/Makefile.in $(top_builddir)/config.status
	@cd $(top_builddir) && \
	  CONFIG_FILES=$(subdir)/$@ CONFIG_HEADERS= \
	  $(SHELL) ./config.status

include $(top_builddir)/etc/Makeconf

mostlyclean: clean
clean:
	@-rm -rf .libs _libs
	@-rm -f *.o *.$(SHLIB_EXT)
distclean: clean
	@-rm -f Makefile
maintainer-clean: distclean
