#
# ${R_HOME}/src/library/modreg/src/Makefile

VPATH = @srcdir@
srcdir = @srcdir@
top_srcdir = @top_srcdir@

top_builddir = ../../../..
subdir = src/library/modreg/src

include $(top_builddir)/etc/Makeconf
R_HOME = $(top_builddir)

pkg = modreg
LIB = $(pkg).$(SHLIBEXT)
OBJS = bsplvd.o bvalue.o bvalus.o ksmooth.o loessc.o \
	loessf.o ppr.o qsbart.o sbart.o sgram.o sinerp.o sslvrg.o stxwx.o

all: $(LIB)
	@$(top_srcdir)/tools/mkinstalldirs $(top_builddir)/library/$(pkg)/libs
	@$(top_srcdir)/tools/copy-if-change $(LIB) $(top_builddir)/library/$(pkg)/libs

$(LIB): $(OBJS)
	$(SHLIBLD) $(SHLIBLDFLAGS) -o $@ $(OBJS) $(FLIBS)

mostlyclean: clean
clean:
	@rm -f *.o *.$(SHLIBEXT)
distclean: clean
	@rm -f Makefile
maintainer-clean: distclean
