#
# ${RHOME}/src/library/modreg/src/Makefile

VPATH = @srcdir@
srcdir = @srcdir@
top_srcdir = @top_srcdir@

top_builddir = ../../../..
subdir = src/library/modreg/src

include $(top_builddir)/etc/Makeconf
MKINSTALLDIRS = $(top_srcdir)/aux/mkinstalldirs
RHOME = $(top_builddir)

pkg = modreg
LIB = $(pkg).$(SHLIBEXT)
OBJS = bsplvd.o bvalue.o bvalus.o ksmooth.o loessc.o \
	loessf.o ppr.o qsbart.o sbart.o sgram.o sinerp.o sslvrg.o stxwx.o

all: $(LIB)
	@$(MKINSTALLDIRS) $(top_builddir)/library/$(pkg)/libs
	@cp $(LIB) $(top_builddir)/library/$(pkg)/libs

$(LIB): $(OBJS)
	$(top_builddir)/bin/R SHLIB -o $@ $(OBJS)

mostlyclean: clean
clean:
	@rm -f *.o *.$(SHLIBEXT)
distclean: clean
	@rm -f Makefile
maintainer-clean: distclean
