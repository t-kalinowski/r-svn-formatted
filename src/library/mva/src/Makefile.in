#
# ${R_HOME}/src/library/mva/src/Makefile

pkg = mva

VPATH = @srcdir@
srcdir = @srcdir@
top_srcdir = @top_srcdir@

top_builddir = ../../../..
subdir = src/library/$(pkg)/src
R_HOME = $(top_builddir)

OBJS = dblcen.o distance.o hclust.o hclust-utils.o init.o kmns.o
SHLIB = $(pkg).@SHLIB_EXT@

## FIXME:
## We should really add FLIBS to SHLIB_LIBADD, but we need to include
## the shlib Makeconf at a later stage, and its default value would
## override our setting.
PKG_LIBS = @FLIBS@
## </FIXME>

all: Makefile $(SHLIB)
	@$(top_srcdir)/tools/mkinstalldirs \
	  $(top_builddir)/library/$(pkg)/libs
	@$(top_srcdir)/tools/copy-if-change $(SHLIB) \
	  $(top_builddir)/library/$(pkg)/libs/$(SHLIB)

Makefile: $(srcdir)/Makefile.in $(top_builddir)/config.status
	@cd $(top_builddir) && \
	  CONFIG_FILES=$(subdir)/$@ CONFIG_HEADERS= \
	  $(SHELL) ./config.status

include $(top_srcdir)/share/make/shlib.mk

mostlyclean: clean
clean:
	@-rm -rf .libs _libs
	@-rm -f *.o *.$(SHLIB_EXT)
distclean: clean
	@-rm -f Makefile
maintainer-clean: distclean
