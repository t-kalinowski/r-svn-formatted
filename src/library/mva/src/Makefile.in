#
# ${R_HOME}/src/library/mva/src/Makefile

VPATH = @srcdir@
srcdir = @srcdir@
top_srcdir = @top_srcdir@

top_builddir = ../../../..
subdir = src/library/mva/src

include $(top_builddir)/etc/Makeconf
R_HOME = $(top_builddir)

pkg = mva
LIB = $(pkg).$(SHLIBEXT)
OBJS = dblcen.o hclust.o kmns.o

all: $(LIB)
	@$(top_srcdir)/tools/mkinstalldirs $(top_builddir)/library/$(pkg)/libs
	@$(top_srcdir)/tools/copy-if-change $(LIB) $(top_builddir)/library/$(pkg)/libs

$(LIB): $(OBJS)
	$(SHLIBLD) $(SHLIBLDFLAGS) -o $@ $(OBJS) $(FLIBS)

mostlyclean: clean
clean:
	@rm -f *.o *.$(SHLIBEXT)
distclean: clean
	@rm -f Makefile
maintainer-clean: distclean
