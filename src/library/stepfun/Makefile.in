#
# ${RHOME}/src/library/${pkg}/Makefile

VPATH = @srcdir@
srcdir = @srcdir@
top_srcdir = @top_srcdir@

top_builddir = ../../..
subdir = src/library/stepfun

include $(top_builddir)/Makeconf

distdir = $(top_builddir)/$(PACKAGE)-$(VERSION)/$(subdir)
DISTFILES = INDEX TITLE Makefile.in

pkg = stepfun

all:
	@$(MKINSTALLDIRS) $(top_builddir)/library/$(pkg)/R
	@cat `ls $(srcdir)/R/*.R` \
	  > $(top_builddir)/library/$(pkg)/R/$(pkg)
	@if test -f $(srcdir)/INDEX; then \
	  cp $(srcdir)/INDEX $(top_builddir)/library/$(pkg); \
	fi
	@if test -f $(srcdir)/TITLE; then \
	  cp $(srcdir)/TITLE $(top_builddir)/library/$(pkg); \
	fi
	@if test -d $(srcdir)/data; then \
	  $(MKINSTALLDIRS) $(top_builddir)/library/$(pkg)/data; \
	  $(INSTALL_DATA) `ls $(srcdir)/data/[a-z]*` \
	    $(top_builddir)/library/$(pkg)/data; \
	fi
	@if test -d src; then cd src; $(MAKE); cd ..; fi

mostlyclean: clean
clean:
	@if test -d src; then cd src; $(MAKE) $@; cd ..; fi
distclean:
	@if test -d src; then cd src; $(MAKE) $@; cd ..; fi
	@rm -f Makefile
maintainer-clean: distclean

distdir: $(DISTFILES)
	@for f in $(DISTFILES); do \
	  test -f $(distdir)/$${f} \
	    || ln $(srcdir)/$${f} $(distdir)/$${f} 2>/dev/null \
	    || cp -p $(srcdir)/$${f} $(distdir)/$${f}; \
	done
	@for d in R data man; do \
	  if test -d $(srcdir)/$${d}; then \
	    ((cd $(srcdir); $(TAR) -c -f - --exclude=CVS $${d}) \
	        | (cd $(distdir); $(TAR) -x -f -)) \
	      || exit 1; \
	  fi; \
	  if test -d $(srcdir)/src; then \
	    ((cd $(srcdir); $(TAR) -c -f - $${d}/*[.cfh]) \
	        | (cd $(distdir); $(TAR) -x -f -)) \
	      || exit 1; \
	  fi; \
	done
