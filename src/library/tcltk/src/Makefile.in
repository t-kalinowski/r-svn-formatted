#
# ${R_HOME}/src/library/tcltk/src/Makefile

pkg = tcltk

VPATH = @srcdir@
srcdir = @srcdir@
top_srcdir = @top_srcdir@

top_builddir = ../../../..
subdir = src/library/$(pkg)/src
R_HOME = $(top_builddir)

SHLIB = $(pkg).@SHLIBEXT@
OBJS = tcltk.o

all: Makefile $(SHLIB)
	@$(top_srcdir)/tools/mkinstalldirs \
	  $(top_builddir)/library/$(pkg)/libs
	@$(top_srcdir)/tools/copy-if-change $(SHLIB) \
	  $(top_builddir)/library/$(pkg)/libs/$(SHLIB)

Makefile: $(srcdir)/Makefile.in $(top_builddir)/config.status
	@cd $(top_builddir) && \
	  CONFIG_FILES=$(subdir)/$@ CONFIG_HEADERS= \
	  $(SHELL) ./config.status

include $(top_builddir)/etc/Makeconf
ALL_CPPFLAGS = $(R_XTRA_CPPFLAGS) $(PKG_CPPFLAGS) $(CPPFLAGS)
ALL_LIBS = $(PKG_LIBS) $(LIBPATHS) $(TCLTK_LIBS)

mostlyclean: clean
clean:
	@rm -f *.o *.$(SHLIBEXT)
distclean: clean
	@rm -f Makefile
maintainer-clean: distclean
