#
# ${R_HOME}/src/library/tcltk/src/Makefile

pkg = tcltk

VPATH = @srcdir@
srcdir = @srcdir@
top_srcdir = @top_srcdir@

top_builddir = ../../../..
subdir = src/library/$(pkg)/src
R_HOME = $(top_builddir)

OBJS = tcltk.o
SHLIB = $(pkg).@SHLIB_EXT@
## FIXME:
## Use $(LIBM).
SHLIB_LIBADD = $(FLIBS)
## </FIXME>

PKG_CPPFLAGS = @TCLTK_CPPFLAGS@
PKG_LIBS = @TCLTK_LIBS@

all: Makefile $(SHLIB)
	@$(top_srcdir)/tools/mkinstalldirs \
	  $(top_builddir)/library/$(pkg)/libs
	@$(top_srcdir)/tools/copy-if-change $(SHLIB) \
	  $(top_builddir)/library/$(pkg)/libs/$(SHLIB)

Makefile: $(srcdir)/Makefile.in $(top_builddir)/config.status
	@cd $(top_builddir) && \
	  CONFIG_FILES=$(subdir)/$@ CONFIG_HEADERS= \
	  $(SHELL) ./config.status

include $(top_builddir)/share/make/shlib.mk

mostlyclean: clean
clean:
	@-rm -rf .libs _libs
	@-rm -f *.o *.$(SHLIB_EXT)
distclean: clean
	@-rm -f Makefile
maintainer-clean: distclean
