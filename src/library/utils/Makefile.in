#
# ${R_HOME}/src/library/utils/Makefile

VPATH = @srcdir@
srcdir = @srcdir@
top_srcdir = @top_srcdir@

top_builddir = ../../..
subdir = src/library/utils

include $(top_builddir)/Makeconf

distdir = $(top_builddir)/$(PACKAGE)-$(VERSION)/$(subdir)
DISTFILES = DESCRIPTION.in Makefile.in Makefile.win \
  NAMESPACE NAMESPACE.aqua

pkg = utils

R_EXE = $(top_builddir)/bin/R --vanilla --slave

RSRC0 = `LC_COLLATE=C ls $(srcdir)/R/*.R $(srcdir)/R/$(R_OSTYPE)/*.R`
RSRC = $(RSRC0) @BUILD_AQUA_TRUE@ `LC_COLLATE=C ls $(srcdir)/R/aqua/*.R`
RdSRC = $(srcdir)/man/*.Rd $(srcdir)/man/$(R_OSTYPE)/*.Rd
NSFILES = $(srcdir)/NAMESPACE @BUILD_AQUA_TRUE@ $(srcdir)/NAMESPACE.aqua
INSTDIRS = Sweave misc

.PHONY: iconvlist

all: Makefile DESCRIPTION
	@$(ECHO) "building package '$(pkg)'"
	@$(MKINSTALLDIRS) $(top_builddir)/library/$(pkg)
	@$(MAKE) mkR mkdesc mkpo mkman instdirs iconvlist
	@cat $(NSFILES) > $(top_builddir)/library/$(pkg)/NAMESPACE
	@$(MAKE) mklazy

iconvlist: $(top_builddir)/library/$(pkg)/iconvlist

$(top_builddir)/library/$(pkg)/iconvlist:
	-@iconv -l > $@ 2> /dev/null || touch $@


include $(top_srcdir)/share/make/basepkg.mk
