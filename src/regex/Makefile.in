CC=@CC@
CFLAGS=@CFLAGS@ -I../include -DPOSIX_MISTAKE
AR=@AR@
RANLIB=@RANLIB@

SRCS=	regcomp.c regerror.c regexec.c regfree.c

OBJ=	\
	regcomp.o \
	regerror.o \
	regexec.o \
	regfree.o

LIB=	../lib/libregex.a

$(LIB):	$(OBJ)
	$(AR) cr $(LIB) $(OBJ)
	$(RANLIB) $(LIB)

clean:
	@echo cleaning in regex
	@-rm -f *.o *.a

realclean:        
	@echo cleaning in regex
	@-rm -f Makefile *.o *.a
