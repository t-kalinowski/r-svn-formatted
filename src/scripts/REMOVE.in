#! /bin/sh

# ${RHOME}/bin/REMOVE for removing add-on packages
# Usage:
#	R REMOVE [options] [-l lib] pkg_1 ... pkg_n

VERSION="0.1-0"
USAGE_MSG="Usage:  R REMOVE [options] [-l lib] pkg_1 ... pkg_n"
PKGS=
lib=${RHOME}/library

while test -n "${1}"; do
  case ${1} in
    -h|--help|-\?)
      echo "${USAGE_MSG}"; exit 0 ;;
    -V|--version)
      echo "${VERSION}"; exit 0 ;;
    -l)
      lib=${2}; shift ;;
    *)
      PKGS="${PKGS} ${1}" ;;
  esac
  shift
done  

if test -z "${PKGS}"; then
  echo "${USAGE_MSG}"
  exit 1
fi

if test -d ${lib} -a -w ${lib}; then
  cd ${lib}
  lib=`pwd`
else    
  echo "ERROR:  cannot cd to or remove from directory \`${lib}'"
  exit 2
fi    

for pkg in ${PKGS}; do
  if test -d ${pkg}; then
    rm -rf ${pkg}
  else
    echo "Warning:  there is no pkg \`${pkg}' in lib \`${lib}'"
    continue
  fi
done  

cat */TITLE > LibIndex 2> /dev/null

NO_PERL5=@NO_PERL5@
if ${NO_PERL5}; then
  echo "*** Cannot update the file"
  echo "***    ${lib}/index.html"
  echo "*** without Perl version 5.  Please delete the entries for"
  echo "*** the packages you removed manually."
  exit 2
fi

if test ${lib} = ${RHOME}/library; then
  ${RHOME}/bin/build-help --htmllists
  cat ${RHOME}/library/*/CONTENTS > ${RHOME}/doc/html/search/index.txt
fi
