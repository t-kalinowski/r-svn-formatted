#
# ${R_HOME}/src/unix/Makefile

VPATH = @srcdir@
srcdir = @srcdir@
top_srcdir = @top_srcdir@

top_builddir = ../..
subdir = src/unix

include $(top_builddir)/Makeconf

distdir = $(top_builddir)/$(PACKAGE)-$(VERSION)/$(subdir)
DISTFILES = $(shell cd $(srcdir) && ls PSPAPER Makefile.in *.[cfh])

OBJS = \
	dataentry.o \
	devPS.o \
	devPicTeX.o \
	devX11.o \
	dynload.o \
	edit.o \
	rotated.o \
	system.o \
	Rsock.o \
	sock.o

LIB = libunix.a

all: Makefile R

Makefile: $(srcdir)/Makefile.in $(top_builddir)/config.status
	cd $(top_builddir) && \
	  CONFIG_FILES=$(subdir)/$@ CONFIG_HEADERS= \
	  $(SHELL) ./config.status

R: Makefile $(LIB)

$(LIB): $(OBJS)
	$(AR) cr $(LIB) $(OBJS)
	$(RANLIB) $(LIB)

dataentry.o: $(srcdir)/dataentry.c $(srcdir)/dataentry.h $(top_srcdir)/src/include/Defn.h
	$(CC) $(CFLAGS) $(X_CFLAGS) $(CPPFLAGS) -c $<
rotated.o: $(srcdir)/rotated.c $(srcdir)/rotated.h
	$(CC) $(CFLAGS) $(X_CFLAGS) $(CPPFLAGS) -c $<
devX11.o: $(srcdir)/devX11.c $(top_srcdir)/src/include/Graphics.h $(top_srcdir)/src/include/Defn.h
	$(CC) $(CFLAGS) $(X_CFLAGS) $(CPPFLAGS) -c $<
devPS.o: $(srcdir)/devPS.c $(top_srcdir)/src/include/Graphics.h $(top_srcdir)/src/include/Defn.h
devPicTeX.o: $(srcdir)/devPicTeX.c $(top_srcdir)/src/include/Graphics.h $(top_srcdir)/src/include/Defn.h

dynload.o: $(srcdir)/dynload.c ../include/FFTab.h ../include/FFDecl.h
system.o: $(srcdir)/system.c $(top_srcdir)/src/include/Defn.h $(top_srcdir)/src/include/Fileio.h ../include/Platform.h
Rsock.o: $(srcdir)/Rsock.c sock.h
sock.o: $(srcdir)/sock.c sock.h

../include/FFTab.h ../include/FFDecl.h:
	(cd ../include; $(MAKE) $(@F))

mostlyclean: clean
clean:
	@echo Cleaning in src/unix
	@-rm -f *.o *.a
distclean: clean
	@-rm -f Makefile
maintainer-clean: distclean

distdir: $(DISTFILES)
	@for f in $(DISTFILES); do \
	  test -f $(distdir)/$${f} \
	    || ln $(srcdir)/$${f} $(distdir)/$${f} 2>/dev/null \
	    || cp -p $(srcdir)/$${f} $(distdir)/$${f}; \
	done
