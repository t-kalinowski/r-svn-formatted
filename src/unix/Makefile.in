#
# ${R_HOME}/src/unix/Makefile

VPATH = @srcdir@
srcdir = @srcdir@
top_srcdir = @top_srcdir@

top_builddir = ../..
subdir = src/unix

include $(top_builddir)/Makeconf

ALL_CPPFLAGS = $(R_XTRA_CPPFLAGS) $(X_CFLAGS) $(CPPFLAGS) $(DEFS)

distdir = $(top_builddir)/$(PACKAGE)-$(VERSION)/$(subdir)
DISTFILES = $(shell cd $(srcdir) && ls PSPAPER Makefile.in *.[cfh])

SRCS = \
	dataentry.c \
	devPS.c \
	devPicTeX.c \
	devX11.c \
	dynload.c \
	edit.c \
	rotated.c \
	system.c \
	Rsock.c \
	sock.c
DEPS = $(SRCS:.c=.d)
OBJS = $(SRCS:.c=.o)

LIB = libunix.a

all: Makefile Makedeps R

Makefile: $(srcdir)/Makefile.in \
  $(top_builddir)/config.status \
  ../include/Version.h \
  ../include/FFDecl.h \
  ../include/FFTab.h \
  $(DEPS)
	@cd $(top_builddir) && \
	  CONFIG_FILES=$(subdir)/$@ CONFIG_HEADERS= \
	  $(SHELL) ./config.status

Makedeps: Makefile
	@cat $(DEPS) >> Makefile
	@touch $@

R: Makefile
	@$(MAKE) Makedeps
	@$(MAKE) $(LIB)

../include/Version.h:
	(cd ../include; $(MAKE) $(@F))
../include/FFDecl.h ../include/FFTab.h: $(top_srcdir)/src/appl/ROUTINES
	(cd ../include; $(top_srcdir)/tools/GETSYMBOLS)

$(LIB): $(OBJS)
	$(AR) cr $(LIB) $(OBJS)
	$(RANLIB) $(LIB)

mostlyclean: clean
clean:
	@echo "Cleaning in $(subdir)"
	@-rm -f Makedeps *.d *.o *.a
distclean: clean
	@-rm -f Makefile
maintainer-clean: distclean

distdir: $(DISTFILES)
	@for f in $(DISTFILES); do \
	  test -f $(distdir)/$${f} \
	    || ln $(srcdir)/$${f} $(distdir)/$${f} 2>/dev/null \
	    || cp -p $(srcdir)/$${f} $(distdir)/$${f}; \
	done

