#
# ${RHOME}/tests/Examples/Makefile

VPATH = @srcdir@
srcdir = @srcdir@
top_srcdir = @top_srcdir@

top_builddir = ../..
subdir = tests/Examples

include $(top_builddir)/Makeconf

distdir = $(top_builddir)/$(PACKAGE)-$(VERSION)/$(subdir)
DISTFILES = Makefile.in massage-Examples

R = $(top_builddir)/bin/R --vanilla --vsize 6

Pkgs = base eda mva stepfun
Ex_R = $(Pkgs:=-Ex.R)
Ex_Rout = $(Ex_R:.R=.Rout)
.SUFFIXES = -Ex.R -Ex.Rout
.SECONDARY= $(Ex_R)

all: Makefile test-Examples

Makefile: $(srcdir)/Makefile.in $(top_builddir)/config.status
	cd $(top_builddir) && \
	  CONFIG_FILES=$(subdir)/$@ CONFIG_HEADERS= \
	  $(SHELL) ./config.status

test-Examples: $(Ex_Rout)

$(Ex_Rout): %-Ex.Rout: %-Ex.R $(top_builddir)/stamp-R
	@if [ -f $@.bak ]; then mv $@.bak $@.bakk ; fi
	@if [ -f $@ ]; then mv $@ $@.bak ; fi
	@echo "Running all help() examples ..."
	$(R) < $< > $@

#Always remakes:
#$(Ex_R): %-Ex.R: $(top_builddir)/library/%/R-ex/*.R
%-Ex.R: $(top_builddir)/library/%/R-ex/*.R
	@if [ -f $@.bak ]; then mv $@.bak $@.bakk ; fi
	@if [ -f $@ ]; then mv $@ $@.bak ; fi
	@echo "Massaging examples into $@ ..."
	-@$(srcdir)/massage-Examples $* $^ > $@

$(top_builddir)/library/*/R-ex/%.R:
	(cd $(top_builddir)/src/library && $(MAKE) PKGS="$(Pkgs)" stamp-examples)

$(top_builddir)/stamp-R:
	-(cd $(top_builddir) && $(MAKE) R)

mostlyclean: clean
clean:
	@rm -f *.Rd* *.ps *.tex *.dat* data foo*
distclean: clean
	@rm -f *.R .RData sink-examp.txt Makefile
maintainer-clean: distclean

distdir: $(DISTFILES)
	@for f in $(DISTFILES); do \
	  test -f $(distdir)/$${f} \
	    || ln $(srcdir)/$${f} $(distdir)/$${f} 2>/dev/null \
	    || cp -p $(srcdir)/$${f} $(distdir)/$${f}; \
        done
