# ${RHOME}/tools/GETRWVERSION

# keep in step with GETDISTNAME
(
  maj=`sed 's/\([^ .]*\).\([^ ]*\) *\(.*\)/\1/' < $1`
  min=`sed 's/\([^ .]*\).\([^ ]*\) *\(.*\)/\2/' < $1`
  rev=`sed 's/\([^ .]*\).\([^ ]*\) *\(.*\)/\3/' < $1`
  if test -z "${rev}" ; then
    res="R-${maj}.${min}"
  else
    if test "${rev}" = "Under development (unstable)"; then
      res="R-${maj}.${min}dev"
    else
      rev=`echo ${rev} | tr [A-Z] [a-z]`
      res="R-${maj}.${min}${rev}"
    fi
  fi
  echo ${res}
)    
